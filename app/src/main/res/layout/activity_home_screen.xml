<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.obelisktechnologies.o_be.HomeScreen">


    <TextView

        android:textStyle="bold"
        android:id="@+id/helloMsg"
        android:gravity="center"
        android:textSize="50sp"
        android:text="Hi User!"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:layout_width="250sp"
        android:layout_height="60sp" />
    
    <TextView

        android:id="@+id/helpMsg"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:gravity="center"
        android:text="What can i do for you?"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/helloMsg"
        android:layout_width="300sp"
        android:layout_height="40sp" />
    
    
    <ImageButton
        android:id="@+id/homeBtn"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/home"
        android:background="@null"
        android:layout_marginTop="60sp"
        android:layout_below="@id/helpMsg"
        android:layout_centerHorizontal="true"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:onClick="homeFunction"/>

    <TextView

        android:id="@+id/homeText"
        android:layout_marginTop="8sp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Home"
        android:layout_below="@+id/homeBtn"
        android:layout_centerHorizontal="true"
        android:layout_width="60sp"
        android:layout_height="20sp" />


    <ImageButton
        android:id="@+id/officeBtn"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/office"
        android:background="@null"
        android:layout_marginTop="30sp"
        android:layout_below="@id/homeText"
        android:layout_centerHorizontal="true"
        android:layout_width="80sp"
        android:layout_height="80sp" />

    <TextView

        android:id="@+id/officeText"
        android:layout_marginTop="8sp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Office"
        android:layout_below="@+id/officeBtn"
        android:layout_centerHorizontal="true"
        android:layout_width="60sp"
        android:layout_height="20sp" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/settings"
        android:background="@null"
        android:layout_marginTop="30sp"
        android:layout_below="@id/officeText"
        android:layout_centerHorizontal="true"
        android:layout_width="80sp"
        android:layout_height="80sp" />

    <TextView

        android:id="@+id/settingsText"
        android:layout_marginTop="8sp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Settings"
        android:layout_below="@+id/settingsButton"
        android:layout_centerHorizontal="true"
        android:layout_width="65sp"
        android:layout_height="23sp"
        />


</RelativeLayout>
